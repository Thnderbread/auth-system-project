<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <script>
        async function forgotPassword(form) {
            event.preventDefault(); //**
            const email = document.getElementById('userEmail').value;
        
            try {
                const response = await fetch('./forgot', {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    credentials: "include",
                   body: JSON.stringify({ email })
                });
                if (!response.ok) {
                    throw new Error(`${response.status} ${response.statusText}`);
                    window.location.replace('./404');
                }
                window.location.replace('./reset');
            } catch (error) {
                console.error(error); // error.stack prints more detailed information
                window.location.replace('./404');
            }
        }
    </script>
    <link rel="stylesheet" href=".styles.css">
</head>
<body>
    <div class="center">
        <form onsubmit='forgotPassword(this);' method="post">
            <center><h1>Forgot Password</h1></center>
            <label>Email</label>
            <input type="text" name="email" id="userEmail" autofocus required/>
            <input type="submit" id="submit" value="Submit"/>
        </form>
    </div>
</body>
</html>

